{
  "name": "Dapplets",
  "version": "",
  "version_name": "",
  "description": "",
  "author": "",
  "short_name": "Dapplets",
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "minimum_chrome_version": "92",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "36": "icons/icon36.png",
      "48": "icons/icon48.png",
      "64": "icons/icon64.png",
      "96": "icons/icon96.png",
      "128": "icons/icon128.png",
      "19": "icons/icon19.png",
      "38": "icons/icon38.png",
      "512": "icons/icon512.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "36": "icons/icon36.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png",
    "19": "icons/icon19.png",
    "38": "icons/icon38.png",
    "512": "icons/icon512.png"
  },
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["custom-elements.min.js", "contentscript.js"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": [
        "https://wallet.near.org/*",
        "https://wallet.mainnet.near.org/*",
        "https://wallet.testnet.near.org/*"
      ],
      "js": ["documentstart.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["callback.html", "inpage.js", "sandbox.js"],
      "matches": ["*://*/*"]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "unlimitedStorage",
    "contextMenus",
    "management",
    "scripting",
    "offscreen"
  ],
  "host_permissions": ["*://localhost/*", "http://*/*", "https://*/*"],
  "commands": {
    "toggle-overlay": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Toggle overlay"
    }
  }
}
