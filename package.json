{
  "name": "@dapplets/dapplet-extension",
  "version": "0.26.0-alpha.1",
  "description": "The Bridge to the Augmented Web.",
  "main": "./lib/index.min.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build:extension": "webpack --config webpack.prod.js",
    "build:jslib": "webpack --config webpack.jslib.js && tsc -d --emitDeclarationOnly",
    "build": "npm run build:extension && npm run build:jslib",
    "dev": "webpack --config webpack.dev.js",
    "start": "webpack -w --config webpack.dev.js",
    "lint": "tslint 'src/**/*.{ts, tsx}'",
    "test": "mocha -r ts-node/register tests/**/*.spec.ts",
    "clean": "rm -rf ./build && rm -rf ./lib"
  },
  "devDependencies": {
    "@rjsf/core": "^2.4.2",
    "@rjsf/semantic-ui": "^2.4.2",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@types/chai": "^4.2.15",
    "@types/chrome": "^0.0.132",
    "@types/mocha": "^8.2.1",
    "@types/puppeteer": "^3.0.5",
    "@types/qr-image": "^3.2.3",
    "@types/react": "^16.14.4",
    "@types/react-dom": "^16.9.11",
    "@types/semver": "^7.3.4",
    "@walletconnect/client": "^1.3.6",
    "@walletconnect/web3-provider": "^1.3.6",
    "chai": "^4.2.0",
    "chrome-extension-message-wrapper": "github:dapplets/chrome-extension-message-wrapper",
    "copy-webpack-plugin": "^6.4.1",
    "css-loader": "^4.3.0",
    "ethereum-blockies-base64": "^1.0.2",
    "ethers": "^5.0.31",
    "fibers": "^5.0.0",
    "file-loader": "^6.2.0",
    "jszip": "^3.5.0",
    "metamask-extension-provider": "^3.0.0",
    "mocha": "^8.2.1",
    "node-sass": "^4.14.1",
    "puppeteer": "^5.5.0",
    "qr-image": "^3.2.0",
    "raw-loader": "^4.0.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-router-dom": "^5.2.0",
    "react-time-ago": "^6.2.2",
    "react-twemoji": "^0.3.0",
    "resolve-url-loader": "^3.1.2",
    "sass": "^1.32.8",
    "sass-loader": "^10.1.1",
    "semantic-release": "^17.3.9",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^1.3.1",
    "semver": "^7.3.4",
    "simple-mapper": "^2.2.0",
    "style-loader": "^1.3.0",
    "styled-components": "^5.2.1",
    "topological-sort": "^0.3.0",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "tslint-react": "^5.0.0",
    "typescript": "^4.1.5",
    "url-loader": "^4.1.1",
    "webextension-polyfill-ts": "^0.22.0",
    "webpack": "^4.46.0",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^5.7.3"
  },
  "directories": {
    "doc": "docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dapplets/dapplet-extension.git"
  },
  "keywords": [
    "dapplets",
    "extension",
    "ethereum"
  ],
  "author": "Dapplets Team <contact@dapplets.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dapplets/dapplet-extension/issues"
  },
  "homepage": "https://github.com/dapplets/dapplet-extension#readme",
  "files": [
    "lib/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "master",
      {
        "name": "develop",
        "prerelease": "alpha"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "package-lock.json"
          ]
        }
      ],
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npm run build:extension && cd build && zip -r dapplet-extension.zip *"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "build/dapplet-extension.zip",
              "label": "Browser Extension (zip)"
            },
            {
              "path": "lib/index.min.js",
              "label": "Pure JSLib for browser (js)"
            }
          ]
        }
      ]
    ]
  }
}
